@model MIS_2019.Models.Users



@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_Layoutmaster.cshtml";
}
<!DOCTYPE html>
<html id="page" dir="ltr">
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/scripts/jquery-1.10.2.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.1.0/css/flag-icon.min.css" rel="stylesheet">


</head>

<body>
   
    @if (@TempData["NotValidUser"] != null)
    {
        <div class="alert alert-danger">
            @TempData["NotValidUser"]
        </div>
    }
    <div class="container">
        <div class="row">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                    </div>
                    <div style="padding-top:30px" class="panel-body">
                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                        @using (Html.BeginForm(FormMethod.Post))
                        {

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">*@
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", name = "username", value = "", placeholder = "username or email" } })*
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @*<input id="login-password" type="password" class="form-control" name="password" placeholder="password">*@
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", name = "password", placeholder = "password", type = "password" } })*
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                                    <select class="form-control" id="Language">
                                        <option value="ltr">English </option>
                                        <option value="rtl">Arabic</option>
                                    </select>


                                </div>
                                <div class="input-group">
                                    <div class="checkbox">
                                        <label>
                                            <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                        </label>
                                    </div>
                                </div>

                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
                                    <div class="loginbtn">

                                        <input id="login" type="submit" value="Login" class="btn btn-primary" />

                                    </div>
                                </div>


                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

<script type="text/javascript">
    document.getElementById('Language').addEventListener('change', function () {
            document.getElementById('page').setAttribute('dir', this.value);
        })


        function disableBackButton()
        { window.history.forward(); }
        setTimeout("disableBackButton()", 0);
</script>
